<% layout('layouts/boilerplate') %>
<div class="align-items-center mt-5">
  <div class="row justify-content-center">
    <div class="col-md-6 col-xl-4">
      <img
        src="https://res.cloudinary.com/dsvbf6yrb/image/upload/v1754010167/YelpCamp/gybkk1bdodsxtkd1jrhb_60821d.webp"
        alt=""
        class="card-img-top"
      />
      <div class="card shadow">
        <div class="card-body">
          <h5 class="card-title">Register</h5>
          <form
            action="/register"
            method="POST"
            class="validated-form"
            novalidate
          >
            <div class="mb-3">
              <label class="form-label" for="username"
                >Username:
              </label>
              <input
                class="form-control"
                type="text"
                id="username"
                name="username"
                required
                autofocus
              />
            </div>
            <div class="mb-3">
              <label class="form-label" for="email">Email: </label>
              <input
                class="form-control"
                type="email"
                id="email"
                name="email"
                required
              />
            </div>
            <div class="mb-3">
              <label class="form-label" for="password"
                >Password:
              </label>
              <input
                class="form-control"
                type="password"
                id="password"
                name="password"
                required
              />
            </div>
            <button class="btn btn-success">Register</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
