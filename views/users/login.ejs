<% layout('layouts/boilerplate') %>

 <div class="align-items-center mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-xl-4">
          <img src="https://res.cloudinary.com/dsvbf6yrb/image/upload/v1754010167/YelpCamp/gybkk1bdodsxtkd1jrhb_60821d.webp" alt="" class="card-img-top">
      <div class="card shadow">
        <div class="card-body">
          <h5 class="card-title">Login</h5>
          <form
            action="/login"
            method="POST"
            class="validated-form"
            novalidate
          >
            <div class="mb-3">
              <label class="form-label" for="username"
                >Username:
              </label>
              <input
                class="form-control"
                type="text"
                id="username"
                name="username"
                required
                autofocus
              />
            </div>
            <div class="mb-3">
              <label class="form-label" for="password"
                >Password:
              </label>
              <input
                class="form-control"
                type="password"
                id="password"
                name="password"
                required
              />
            </div>
            <button class="btn btn-success btn-block">Login</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
