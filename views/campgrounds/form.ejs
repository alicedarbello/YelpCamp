<% layout('layouts/boilerplate') %>

<div class="row">
  <h1 class="text-center">
    <%= campground ? "Edit" : "New" %> Campground
  </h1>
    <div class="col-6 offset-3">
      <form
  method="POST"  
  action="<%= campground ? `/campgrounds/${campground._id}?_method=PUT` : "/campgrounds/" %>" novalidate class="validated-form" enctype="multipart/form-data">
      <div class="mb-3"> 
        <label class="form-label" for="title">Title</label>
        <input class="form-control" type="text" id="title" name="campground[title]"
        value="<%= campground ? campground.title : "" %>" required/>
      </div>
      <div class="mb-3">
        <label class="form-label" for="location">Location</label>
        <input class="form-control" type="text" id="location" name="campground[location]"
        value="<%= campground ? campground.location : "" %>" required/>
      </div>
      <div class="mb-3">
      <label class="form-label" for="price">Campground Price</label>
      <div class="input-group">
        <span class="input-group-text" id="price-label">$</span>
        <input type="text" id="price" class="form-control" value="<%= campground ? campground.price : "" %>" placeholder="0.00" aria-label="price" aria-describedby="price-label" name="campground[price]" required/>
      </div>
      </div>
            <div class="mb-3">
        <label class="form-label" for="description">Description</label>
        <textarea class="form-control" id="description" name="campground[description]" required><%= campground ? campground.description : "" %></textarea>
      </div>
            <div class="mb-3">
        <div class="input-group">
          <input type="file" class="form-control" id="image" aria-describedby="inputGroupFileAddon04" aria-label="Upload" name="image" multiple>
      </div>
      </div>
      <div class="mb-3">
      <% if (campground && campground.images && campground.images.length > 0) {  %>
        <div class="row">
          <% campground.images.forEach(function(img, i) { %>
            <div class="col-4">
              <div class="form-check-inline">
              <img src="<%= img.thumbnail %>" alt="<%= img.filename %>" class="img-fluid mb-2">
                <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%= img.filename  %>">
                <label for="image-<%=i%>">Delete image</label>
              </div>
            </div>
          <% }) %>
        </div>
        <% } %>
      </div>
      <div class="mb-3">
            <button class="btn btn-success"><%= campground ? "Edit" : "New" %> Campground</button>
      </div>
    </form>
      <a href="<%= campground ? `/campgrounds/${campground._id}` : "/campgrounds/"%>">Cancel</a>
    </div>
</div>


  
 

